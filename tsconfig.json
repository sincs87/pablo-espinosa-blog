{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@layouts/*": [
                "./src/layouts/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ],
            "@lib/*": [
                "./src/lib/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ]
        }
    }
}